<footer id="footer" class="footer-distributed" style="background-color: #222222;">
    <div class="container">
        <div class="footer">
            <p><%= config.author || config.title %> &copy; <%= date(new Date(), 'YYYY') %></p>
            <ul class="social-media">
                <%
                if(theme.social) {
                if(theme.social['github']) {
                %>
                <li>
                    <a title="github" href="https://github.com/<%= theme.social['github'] %>"
                       target="_blank">
                        <i class="fa fa-github fa-2x"></i>
                    </a>
                </li>
                <%
                }
                if(theme.social['stackoverflow']){
                %>
                <li>
                    <a title="StackOverflow"
                       href="http://stackoverflow.com/users/<%= theme.social['stackoverflow'] %>" target="_blank">
                        <i class="fa fa-stack-overflow fa-2x"></i>
                    </a>
                </li>
                <%
                }
                %>
                <%
                }
                if(theme.email) {
                %>
                <li>
                    <a title="E-mail" href="mailto:<%= theme.email %>">
                        <i class="fa fa-envelope fa-2x"></i>
                    </a>
                </li>
                <%
                }
                %>
                <li>
                    <a title="github" href="https://github.com/howardliu-cn/hexo-theme-clean-dark"
                       target="_blank">
                        <i class="fa fa-film fa-2x"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</footer>